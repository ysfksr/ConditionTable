@model ConditionTable.Models.Rule


<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title" id="myModalLabel">Enter New Result For @Model.Interval</h4>
        </div>
        <div class="modal-body">
            <form id="form" method="post" asp-action="EditRule" asp-controller="Condition">
                <div class="form-group">
                    <input type="text" id="id" value="@Model.Id" name="id" hidden />
                    <input type="number" class="form-control" id="result" name="result" value="@Model.Result" placeholder="Enter Result">
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <a id="closeButton" class="btn btn-secondary">Cancel</a>
            <button type="submit" id="btnSubmitForm" class="btn btn-primary">Save</button>
        </div>
    </div>
</div>

<script>
    $("#closeButton").click(function () {
        $("#myModal").modal("hide");
    });
</script>

<script>
    $("#btnSubmitForm").click(function () {
        $("#form").submit();
    });
</script>